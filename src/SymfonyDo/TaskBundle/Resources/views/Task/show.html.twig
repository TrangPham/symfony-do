{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Task</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task') }}" class="btn btn-block btn-lg btn-default btn-form">
        Back
    </a>
    <a href="{{ path('task_edit', { 'id': entity.id }) }}" class="btn btn-block btn-lg btn-primary btn-form">
        Edit
    </a>
    {{ form(delete_form) }}
{% endblock %}
